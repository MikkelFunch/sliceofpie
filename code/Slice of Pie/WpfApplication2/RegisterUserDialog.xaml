<Window x:Class="WpfApplication2.RegisterUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RegisterUserDialog" Height="300" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Label Content="Username:" Height="28" HorizontalAlignment="Left"  Name="label1" VerticalAlignment="Top" />
            <Label Content="Password:" Height="28" HorizontalAlignment="Left" Name="label2" VerticalAlignment="Top" />
            <Label Content="Repeat:" Height="28" HorizontalAlignment="Left" Name="label3" VerticalAlignment="Top" />
            <TextBox Height="23" HorizontalAlignment="Left" Name="textBoxUser" VerticalAlignment="Top" Width="120"  Text="user"/>
            <TextBox Height="23" HorizontalAlignment="Left" Name="textBoxPass2" VerticalAlignment="Top" Width="120" />
            <TextBox Height="23" HorizontalAlignment="Left" Name="textBoxPass1" VerticalAlignment="Top" Width="120" />
            <Button Content="Create" Height="23" HorizontalAlignment="Left" Name="Create" VerticalAlignment="Top" Width="75" Click="Create_Click"/>
            <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Name="Cancel" VerticalAlignment="Top" Width="75" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
