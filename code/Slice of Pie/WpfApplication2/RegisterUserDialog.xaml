<Window x:Class="WpfApplication2.RegisterUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RegisterUserDialog" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <Label Content="Username:" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" Name="label1" VerticalAlignment="Top" />
            <Label Content="Password:" Height="28" HorizontalAlignment="Left" Margin="12,94,0,0" Name="label2" VerticalAlignment="Top" />
            <Label Content="Repeat:" Height="28" HorizontalAlignment="Left" Margin="12,157,0,0" Name="label3" VerticalAlignment="Top" />
            <TextBox Height="23" HorizontalAlignment="Left" Margin="12,46,0,0" Name="textBoxUser" VerticalAlignment="Top" Width="120" />
            <TextBox Height="23" HorizontalAlignment="Left" Margin="12,191,0,0" Name="textBoxPass2" VerticalAlignment="Top" Width="120" />
            <TextBox Height="23" HorizontalAlignment="Left" Margin="12,128,0,0" Name="textBoxPass1" VerticalAlignment="Top" Width="120" />
            <Button Content="Button" Height="23" HorizontalAlignment="Left" Margin="12,226,0,0" Name="Create" VerticalAlignment="Top" Width="75" Click="Create_Click"/>
            <Button Content="Button" Height="23" HorizontalAlignment="Left" Margin="93,226,0,0" Name="Cancel" VerticalAlignment="Top" Width="75" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
