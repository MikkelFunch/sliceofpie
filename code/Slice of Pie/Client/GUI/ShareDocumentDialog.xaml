<Window x:Class="Client.GUI.ShareDocumentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ShareDocumentDialog" Height="124" Width="320" Loaded="Window_Loaded">
    <Grid>
        <StackPanel VerticalAlignment="Top">
            <Label HorizontalAlignment="Left" Margin="0,0,0,0" Content="Enter email you want to share the document with:" VerticalAlignment="Top" />
            <TextBox HorizontalAlignment="Left" Margin="8,0,0,0" Name="textBoxEmail" VerticalAlignment="Top" Width="240" />

            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <Button Content="Share" Name="buttonShare" Width="75" Click="buttonShare_Click" IsDefault="True" Margin="8,0,4,0" Height="24" />
                <Button Content="Cancel" Name="buttonCancel" Width="75" Click="buttonCancel_Click" Margin="4,0,0,0" Height="24" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
