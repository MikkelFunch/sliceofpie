<controls:ChildWindow x:Class="Web_Solution.GUI.NewDocumentDialog"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="293" Height="117" 
           Title="New Document Dialog">
    <Grid>
        <StackPanel VerticalAlignment="Top">
            <TextBlock HorizontalAlignment="Left" Margin="0,0,0,0" Text="Document title:" VerticalAlignment="Top" />
            <TextBox HorizontalAlignment="Left" Margin="8,0,0,0" Name="textBoxTitle" VerticalAlignment="Top" Width="240" />

            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <Button Content="Save" Name="buttonSave" Width="75" Click="buttonSave_Click" Margin="8,0,4,0" Height="24" />
                <Button Content="Cancel" Name="buttonCancel" Width="75" Click="buttonCancel_Click" Margin="4,0,0,0" Height="24" />
            </StackPanel>
        </StackPanel>
    </Grid>
</controls:ChildWindow>