<controls:ChildWindow x:Class="Web_Solution.GUI.ShareDocumentDialog"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="313" Height="116" 
           Title="ShareDocumentDialog">
    <Grid>
        <StackPanel VerticalAlignment="Top">
            <TextBlock HorizontalAlignment="Left" Margin="0,0,0,0" Text="Enter email you want to share the document with:" VerticalAlignment="Top" />
            <TextBox HorizontalAlignment="Left" Margin="8,0,0,0" Name="textBoxEmail" VerticalAlignment="Top" Width="240" />

            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <Button Content="Share" Name="buttonShare" Width="75" Click="buttonShare_Click" Margin="8,0,4,0" Height="24" />
                <Button Content="Cancel" Name="buttonCancel" Width="75" Click="buttonCancel_Click" Margin="4,0,0,0" Height="24" />
            </StackPanel>
        </StackPanel>
    </Grid>
</controls:ChildWindow>