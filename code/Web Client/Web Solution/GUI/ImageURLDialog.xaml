<controls:ChildWindow x:Class="Web_Solution.GUI.ImageURLDialog"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="369" Height="131" 
           Title="ImageURLDialog">
<Grid>
        <StackPanel>
            <TextBlock Text="Enter url to image:" Height="28" HorizontalAlignment="Left" Margin="3,4,0,0" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Stretch" Margin="4,0,30,0" Name="textBoxURL" VerticalAlignment="Top" />
            <StackPanel Orientation="Horizontal">
                <Button Name="buttonInsert" HorizontalAlignment="Left" VerticalAlignment="Bottom" Content="Add image" Margin="4,8,4,0" Width="70" Click="buttonInsert_Click" />
                <Button Name="buttonCancel" HorizontalAlignment="Left" VerticalAlignment="Bottom" Content="Cancel" Margin="4,8,4,0" Width="70" Click="buttonCancel_Click" />
            </StackPanel>
        </StackPanel>
     </Grid>
</controls:ChildWindow>