<controls:ChildWindow x:Class="Web_Solution.GUI.LoginDialog"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="189" Height="152" 
           Title="LoginDialog">
    <Grid>
        <StackPanel>
            <TextBlock Text="E-mail:" />
            <TextBox Name="textboxEmail" Width="150"  HorizontalAlignment="Left" Margin="8,0,0,0"/>
            <TextBlock Text="Password:"/>
            <PasswordBox Name="passwordBox" Width="150" HorizontalAlignment="Left" Margin="8,0,0,0"/>

            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <Button Content="Login" Name="buttonLogin" HorizontalAlignment="Left" Margin="8,0,4,0" Click="buttonLogin_Click"/>
                <Button Content="Cancel" Name="buttonCancel" HorizontalAlignment="Left" Margin="8,0,4,0" Click="buttonCancel_Click" />
            </StackPanel>

        </StackPanel>

    </Grid>
</controls:ChildWindow>